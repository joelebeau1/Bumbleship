<h1>Place your ships:</h1>
 <div class="setup-board-container">
  <table class="setup-board">
    <tr>
      <th class="index-label"></th>
      <% for num in 0..9 %>
        <th class="index-label"><%= num %></th>
      <% end %>
    </tr>
    <% for letter in 'A'..'J' %>
      <tr>
      <td class="letter index-label"><%= letter %></td>
      <td class="water"></td>
      <td class="water"></td>
      <td class="water"></td>
      <td class="water"></td>
      <td class="water"></td>
      <td class="water"></td>
      <td class="water"></td>
      <td class="water"></td>
      <td class="water"></td>
      <td class="water"></td>
      </tr>
    <% end %>
  </table>
 </div>

  <div class="setup-container">


  <%= render partial: 'shared/errors', locals: { errors: @errors } if @errors %>

  <p>
    <ol>
      <li>For each ship...</li>
      <li>Enter a starting coordinate (Example: A2)</li>
      <li>Select which direction you want that ship to point</li>
    </ol>
  </p>

  <%= form_tag({controller: "boards", action: "update"}, method: "patch") do %>
    <p>
      <%= label_tag "Queen Anne's Revenge, 5 spaces" %>
      <%= hidden_field_tag 'board[ship5[name]]', "Queen Anne's Revenge" %>
      <%= text_field_tag 'board[ship5[coordinate]]' %>
      <%= hidden_field_tag 'board[ship5[length]]', '5' %>
      <%= label_tag 'Right:' %>
      <%= radio_button_tag 'board[ship5[alignment]]', 'right' %>
      <%= label_tag 'Down:' %>
      <%= radio_button_tag 'board[ship5[alignment]]', 'down' %>
    </p>
    <p>
      <%= label_tag 'Frigate, 4 spaces' %>
      <%= hidden_field_tag 'board[ship4[name]]', "Frigate" %>
      <%= text_field_tag 'board[ship4[coordinate]]' %>
      <%= hidden_field_tag 'board[ship4[length]]', '4' %>
      <%= label_tag 'Right:' %>
      <%= radio_button_tag 'board[ship4[alignment]]', 'right' %>
      <%= label_tag 'Down:' %>
      <%= radio_button_tag 'board[ship4[alignment]]', 'down' %>
    </p>
    <p>
      <%= label_tag 'Galleon, 3 spaces' %>
      <%= hidden_field_tag 'board[ship3[name]]', "Galleon" %>
      <%= text_field_tag 'board[ship3[coordinate]]' %>
      <%= hidden_field_tag 'board[ship3[length]]', '3' %>
      <%= label_tag 'Right:' %>
      <%= radio_button_tag 'board[ship3[alignment]]', 'right' %>
      <%= label_tag 'Down:' %>
      <%= radio_button_tag 'board[ship3[alignment]]', 'down' %>
    </p>
    <p>
      <%= label_tag 'Sloop, 2 spaces' %>
      <%= hidden_field_tag 'board[ship2[name]]', "Sloop" %>
      <%= text_field_tag 'board[ship2[coordinate]]' %>
      <%= hidden_field_tag 'board[ship2[length]]', '2' %>
      <%= label_tag 'Right:' %>
      <%= radio_button_tag 'board[ship2[alignment]]', 'right' %>
      <%= label_tag 'Down:' %>
      <%= radio_button_tag 'board[ship2[alignment]]', 'down' %>
    </p>
    <p>
      <%= label_tag 'Galley, 3 spaces' %>
      <%= hidden_field_tag 'board[ship1[name]]', "Galley" %>
      <%= text_field_tag 'board[ship1[coordinate]]' %>
      <%= hidden_field_tag 'board[ship1[length]]', '3' %>
      <%= label_tag 'Right:' %>
      <%= radio_button_tag 'board[ship1[alignment]]', 'right' %>
      <%= label_tag 'Down:' %>
      <%= radio_button_tag 'board[ship1[alignment]]', 'down' %>
    </p>
    <p><%= submit_tag "let's play!" %></p>
  <% end %>
  </div>
