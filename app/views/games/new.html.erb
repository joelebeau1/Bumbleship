<h2>Create your board! </h2>
<table class="setup-board">
  <tr>
    <th></th>
    <% for num in 0..9 %>
      <th><%= num %></th>
    <% end %>
  </tr>
  <% for letter in 'A'..'J' %>
    <tr>
    <td class="letter"><%= letter %></td>
    <td class="active"></td>
    <td class="active"></td>
    <td class="active"></td>
    <td class="active"></td>
    <td class="active"></td>
    <td class="active"></td>
    <td class="active"></td>
    <td class="active"></td>
    <td class="active"></td>
    <td class="active"></td>
    </tr>
  <% end %>
</table>

<div class="setup-container">
<h3>Place your ships:</h3>

<%= render partial: 'shared/errors', locals: { errors: @errors } if @errors %>

<p>
  <ol>
    <li>For each ship...</li>
    <li>Enter a starting coordinate (Example: A2)</li>
    <li>Select which direction you want that ship to point</li>
  </ol>
</p>
<%= form_tag('/games') do %>
  <p>
    <%= label_tag 'Big ship, 5 spaces' %>
    <%= text_field_tag 'ship5[coordinate]' %>
    <%= hidden_field_tag 'ship5[length]', '5' %>
    <%= label_tag 'Right:' %>
    <%= radio_button_tag 'ship5[alignment]', 'right' %>
    <%= label_tag 'Down:' %>
    <%= radio_button_tag 'ship5[alignment]', 'down' %>
  </p>
  <p>
    <%= label_tag 'Pretty Big ship, 4 spaces' %>
    <%= text_field_tag 'ship4[coordinate]' %>
    <%= hidden_field_tag 'ship4[length]', '4' %>
    <%= label_tag 'Right:' %>
    <%= radio_button_tag 'ship4[alignment]', 'right' %>
    <%= label_tag 'Down:' %>
    <%= radio_button_tag 'ship4[alignment]', 'down' %>
  </p>
  <p>
    <%= label_tag 'Kinda Big ship, 3 spaces' %>
    <%= text_field_tag 'ship3[coordinate]' %>
    <%= hidden_field_tag 'ship3[length]', '3' %>
    <%= label_tag 'Right:' %>
    <%= radio_button_tag 'ship3[alignment]', 'right' %>
    <%= label_tag 'Down:' %>
    <%= radio_button_tag 'ship3[alignment]', 'down' %>
  </p>
  <p>
    <%= label_tag 'Small ship, 2 spaces' %>
    <%= text_field_tag 'ship2[coordinate]' %>
    <%= hidden_field_tag 'ship2[length]', '2' %>
    <%= label_tag 'Right:' %>
    <%= radio_button_tag 'ship2[alignment]', 'right' %>
    <%= label_tag 'Down:' %>
    <%= radio_button_tag 'ship2[alignment]', 'down' %>
  </p>
  <p>
    <%= label_tag 'Semi Big ship, 3 spaces' %>
    <%= text_field_tag 'ship1[coordinate]' %>
    <%= hidden_field_tag 'ship1[length]', '3' %>
    <%= label_tag 'Right:' %>
    <%= radio_button_tag 'ship1[alignment]', 'right' %>
    <%= label_tag 'Down:' %>
    <%= radio_button_tag 'ship1[alignment]', 'down' %>
  </p>
  <p><%= submit_tag "let's play!" %></p>
<% end %>
</div>
