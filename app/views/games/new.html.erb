<% if @errors %>
  <% @errors.each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<%= form_for Game.new do |f| %>
  <%= f.submit "New Game", :disable_with => 'Loading...' %>
<% end %>

<%= form_tag(join_game_path, method: "get", class: "join-form") do %>
  <%= label_tag :secret_key, "Enter your secret key:" %>
  <%= text_field_tag :secret_key %>
  <%= submit_tag "Join", :disable_with => 'Joining...' %>
<% end %>

